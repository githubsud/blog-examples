<div class="post">
  <%= render partial: 'post', locals: {post: @post} %>

  <hr/>

  <div class="comments">
    <% @post.comments.each do |comment| %>
      <div id="comment-<%=comment.id%>">
        <%= comment.user.name %> says:
        <p>
          <%= comment.content %>
        </p>
      </div>
    <% end %>
   </div>
</div>